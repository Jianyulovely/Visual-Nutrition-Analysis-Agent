.container {
  min-height: 100vh;
  padding: 40rpx;
}

.header {
  margin-bottom: 60rpx;
}

.welcome {
  margin-bottom: 20rpx;
}

.welcome-text {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.app-name {
  display: block;
  font-size: 64rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.feature-card {
  margin-bottom: 40rpx;
}

.feature-item {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
}

.feature-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.feature-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.info-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.info-dot {
  font-size: 40rpx;
  color: #1890ff;
  margin-right: 16rpx;
  line-height: 1;
}

.info-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.action-card {
  margin-top: 60rpx;
}

.btn-primary {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.4);
}

.btn-primary:active {
  opacity: 0.8;
}
