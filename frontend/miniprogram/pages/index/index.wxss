.container {
  min-height: 100vh;
  background-color: #f8fafc;
}

/* 顶部 Banner：增加 padding-top 解决拥挤，优化渐变 */
.header-banner {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 100rpx 44rpx 140rpx; /* 增加顶部和底部内边距 */
  border-radius: 0 0 50rpx 50rpx;
  position: relative;
}

.greeting {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85); /* 柔和的白色 */
  margin-bottom: 20rpx;
  font-weight: 300;
}

.main-title {
  font-size: 54rpx;
  font-weight: 800;
  color: #ffffff; /* 纯白高亮 */
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.sub-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

/* 分析卡片：微调负边距与投影 */
.analysis-card {
  background: #ffffff;
  margin: -70rpx 32rpx 0; /* 调整负边距，平衡上下空间 */
  border-radius: 30rpx;
  padding: 40rpx 36rpx;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 10;
}

.analysis-icon-wrapper {
  width: 90rpx;
  height: 90rpx;
  background: #f0f9ff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.analysis-icon { font-size: 48rpx; }

.analysis-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.analysis-desc {
  font-size: 24rpx;
  color: #64748b;
}

.brain-icon {
  font-size: 80rpx;
  opacity: 0.9;
}

/* 核心功能部分：延续你满意的设计并微调间距 */
.features-section {
  padding: 44rpx 32rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 30rpx;
}

.feature-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.02);
}

.feature-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.feature-body {
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #334155;
  margin-bottom: 4rpx;
}

.feature-desc {
  font-size: 22rpx;
  color: #94a3b8;
}

/* 颜色背景：使用更清爽的淡色系 */
.bg-blue { background: #eff6ff; }
.bg-orange { background: #fff7ed; }
.bg-red { background: #fef2f2; }

.feature-emoji { font-size: 36rpx; }

.btn-start {
  width: 580rpx;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  box-shadow: 0 10rpx 30rpx rgba(79, 172, 254, 0.3);
}