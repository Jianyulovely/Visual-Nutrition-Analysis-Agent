.container {
  min-height: 100vh;
  padding: 40rpx;
}

.upload-section {
  margin-bottom: 40rpx;
}

.upload-area {
  width: 100%;
  height: 400rpx;
  background-color: #f8f8f8;
  border: 2rpx dashed #d9d9d9;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.upload-area:active {
  background-color: #f0f0f0;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.upload-icon {
  font-size: 80rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #666;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

.input-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.action-section {
  margin-bottom: 40rpx;
}

.btn-analyze {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.4);
}

.btn-analyze:active {
  opacity: 0.8;
}

.btn-analyze[disabled] {
  opacity: 0.5;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  background-color: #f9f9f9;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}

.analysis-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.dish-info {
  margin-bottom: 30rpx;
}

.dish-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.dish-description {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.tags-section {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 30rpx;
}

.tag {
  background-color: #f0f7ff;
  color: #1890ff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 50rpx;
  border: 1rpx solid #e6f7ff;
}

.pie-chart-section {
  margin-bottom: 40rpx;
}

.pie-chart-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
  flex-wrap: wrap;
}

.pie-chart {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border-radius: 50%;
  background-color: #f9f9f9;
}

.pie-canvas {
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.pie-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  background-color: #fff;
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.pie-center-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.pie-center-subtext {
  font-size: 20rpx;
  color: #999;
}

.pie-legend {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  min-width: 200rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  background-color: #f9f9f9;
  cursor: pointer;
  transition: all 0.3s ease;
}

.legend-item:active {
  background-color: #f0f0f0;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.legend-emoji {
  font-size: 24rpx;
  flex-shrink: 0;
}

.legend-text {
  font-size: 24rpx;
  color: #333;
  flex: 1;
}

.legend-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  flex-shrink: 0;
}

.nutrition-section {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.nutrition-header {
  margin-bottom: 20rpx;
}

.nutrition-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.nutrition-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.nutrition-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.nutrition-item:last-child {
  border-bottom: none;
}

.oil-salt-item {
  flex-direction: column;
  align-items: flex-start;
  gap: 8rpx;
}

.nutrition-label {
  font-size: 26rpx;
  color: #666;
}

.nutrition-value {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.salt-warning {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 4rpx;
  padding: 4rpx 12rpx;
  background-color: #fff2f0;
  border: 1rpx solid #ffccc7;
  border-radius: 12rpx;
}

.warning-icon {
  font-size: 20rpx;
}

.warning-text {
  font-size: 20rpx;
  color: #ff4d4f;
}

.category-details {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.category-details-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.category-details-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.prompt-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.prompt-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.prompt-hint {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.btn-go-login {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ae56 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 40rpx;
  border: none;
}
