.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

form {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.label {
  font-size: 32rpx;
  color: #333;
  width: 120rpx;
  flex-shrink: 0;
}

.avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  padding: 0;
  background-color: #f0f0f0;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
}

.nickname-input {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #fafafa;
}

.tip {
  background-color: #e6f7ff;
  border-radius: 8rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #1890ff;
  line-height: 1.6;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  border: none;
}

.btn-submit::after {
  border: none;
}
